<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/multiplePad_rl_root"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/multiplePad_rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/multiplePad_rl_footer"
        android:layout_marginTop="@dimen/utilsAppBar">

        <ImageView
            android:id="@+id/multiplePad_iv_pad"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_centerInParent="true"
            android:paddingEnd="0dp"
            android:paddingLeft="35dp"
            android:paddingRight="0dp"
            android:paddingStart="35dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_pad_girl"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.3dp"
        android:layout_above="@+id/multiplePad_rl_footer"
        android:background="@drawable/utils_shadow_footer"/>

    <RelativeLayout
        android:id="@+id/multiplePad_rl_footer"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true">

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/utilsAppBar"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/multiplePad_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Zenbo模擬 - 多床顯示"
                android:textColor="@color/utilsTextB"
                android:textSize="14sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/utilsAppBarShadow"
            android:background="@drawable/utils_shadow_app_bar"/>

    </LinearLayout>

</RelativeLayout>