<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/utilsBgW"
    tools:context="com.jimmytai.whizpad_medical_zenbo.demo.activity.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/main_rl_multiplePad"
        android:layout_marginTop="@dimen/utilsAppBar">

        <ListView
            android:id="@+id/main_lv_device"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </ListView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_rl_multiplePad"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bg_item_device_normal"
        android:clickable="true">

        <View
            android:layout_width="match_parent"
            android:layout_height="1.3dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/utils_shadow_footer"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="多床顯示"
            android:textColor="@color/utilsTextB"
            android:textSize="13sp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_rl_appBar"
        android:layout_width="match_parent"
        android:layout_height="46dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/colorPrimary">

            <TextView
                android:id="@+id/main_tv_appBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Zenbo模擬"
                android:textColor="@color/utilsTextB"
                android:textSize="14sp"/>

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/utilsAppBarShadow"
            android:layout_alignParentBottom="true"
            android:background="@drawable/utils_shadow_app_bar"/>
    </RelativeLayout>
</RelativeLayout>
